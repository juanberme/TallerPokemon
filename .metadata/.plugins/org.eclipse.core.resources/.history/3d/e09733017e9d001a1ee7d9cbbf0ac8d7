		eric1 = app.loadImage("../insumos/abajo.png");
		eric3 = app.loadImage("../insumos/izquierda.png");
		eric4 = app.loadImage("../insumos/derecha.png");
		
	}
	
	public void draw() {
		
		
		app.image(abajo,posx,posy);
		
		
	}

